{
  "compilerOptions": {
    "baseUrl": ".",
    "skipLibCheck": true,
    "outDir": "build/",
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "checkJs": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2019",
    ],
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "noUnusedLocals": false,
    "strictNullChecks": true,
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  },
  "exclude": [
    "node_modules",
    "src/components/MaterialUINextPickers/*"
  ],
  "include": [
    "src"
  ]
}
